{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": ".tmp",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
